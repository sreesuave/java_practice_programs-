package Maven_examples;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import io.github.bonigarcia.wdm.WebDriverManager;

import java.time.Duration;

public class contact_rental_ex {
    public static void main(String[] args) {
        // Setup Firefox driver
        WebDriverManager.firefoxdriver().setup();
        WebDriver driver = new FirefoxDriver();

        try {
            // Open the rental form page
            driver.get("https://www.mycontactform.com/samples/rental.php");
            driver.manage().window().maximize();

            // Wait for the page to load
            WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(10));

            // Example: Validate radio button not selected (e.g., 'Do you own pets?')
            // Locate the first radio button for "Do you own pets?"
            WebElement yesRadio = wait.until(
                ExpectedConditions.presenceOfElementLocated(By.xpath("//input[@type='radio' and @name='q3' and @value='Yes']"))
            );

            // Check if it's selected
            if (!yesRadio.isSelected()) {
                System.out.println("Validation Passed: Radio button is not selected by default.");
            } else {
                System.out.println("Validation Failed: Radio button is already selected.");
            }

        } catch (Exception e) {
            e.printStackTrace();
        } finally {
            driver.quit();
        }
    }
}
